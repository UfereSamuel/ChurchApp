<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sammy.churchapp.membership.LoginPage"
    tools:showIn="@layout/activity_login_page"
    android:background="@drawable/mem_bkg">



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="110dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"/>

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note!!!... Only authrorized persons can login"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:textStyle="bold|italic"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:textSize="13sp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowColor="#000"
        android:shadowRadius="50"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:hint="User Name"
        android:inputType="text"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/note"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/etName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="40dp"
        android:text="Log In"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowColor="#000"
        android:shadowRadius="50"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unable to Login? Contact the Church Admin "
        android:layout_below="@+id/btnLogin"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowColor="#000"
        android:shadowRadius="50"
        />



</RelativeLayout>
