<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sammy.churchapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomePage"
            android:label="@string/title_activity_welcome_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".notespad.NotesPad"
            android:label="@string/title_activity_notes_pad"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".notespad.NoteEdit"
            android:label="@string/title_activity_note_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".membership.LoginPage"
            android:label="@string/title_activity_login_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".membership.Registration"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bible.Bible"
            android:label="@string/title_activity_bible"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Streaming.LiveRadio"
            android:label="@string/title_activity_live_radio"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>